# Production Environment Variables Template
# Copy this file to .env and fill in the actual values

# ============================================
# Critical - Must Change Before Production
# ============================================

# JWT Secret - CHANGE THIS!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# Database - PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/lottery_db?schema=public

# Frontend URL
FRONTEND_URL=https://your-app.vercel.app

# ============================================
# Payment Gateway (Omise)
# ============================================

OMISE_PUBLIC_KEY=pkey_live_xxx
OMISE_SECRET_KEY=skey_live_xxx
OMISE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# Email Service (Optional)
# ============================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=สลากดิจิทัล <noreply@lottery-digital.com>

# ============================================
# Monitoring (Sentry)
# ============================================

SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=xxx

# ============================================
# Application Settings
# ============================================

NODE_ENV=production
PORT=3001

# API Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX=100    # requests per window

# Session/Cookie
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING

# ============================================
# Feature Flags
# ============================================

ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ============================================
# Security
# ============================================

# CORS - comma-separated list
CORS_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# HTTPS Only
FORCE_HTTPS=true

# ============================================
# Database Connection Pool
# ============================================

DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Logging
# ============================================

LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=json

# ============================================
# Backup
# ============================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
